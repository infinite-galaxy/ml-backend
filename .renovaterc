{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekends",
    ":semanticCommits",
    ":pinAllExceptPeerDependencies"
  ],
  "minimumReleaseAge": "7 days",
  "baseBranches": [
    "develop"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekends"
    ],
    "automerge": true,
    "automergeStrategy": "fast-forward",
    "labels": [
      "dependencies"
    ]
  },
  "packageRules": [
    {
      "matchDepNames": [
        "python"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchDepNames": [
        "python"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeStrategy": "fast-forward",
      "labels": [
        "dependencies"
      ]
    },
    {
      "groupName": "non-major dependencies",
      "matchManagers": [
        "poetry"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeStrategy": "fast-forward",
      "labels": [
        "dependencies"
      ],
      "matchDepNames": [
        "!python"
      ]
    },
    {
      "groupName": "major dependencies",
      "matchManagers": [
        "poetry"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "matchDepNames": [
        "!python"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "dependencies",
        "github actions"
      ]
    }
  ]
}
